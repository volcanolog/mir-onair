<div class="container">
    <div class="container__content">
        <div class="slider">
            <div class="slider__wrapper">
                <div class="slider__items">
                    {% if (banners.getBanners().banner_carousel) %}
                        {% for item in banners.getBanners().banner_carousel %}
                            <div class="slider__item">
                                <div class="slider__image">
                                    <img src="{{ item.path }}" alt="">
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                {% include '../components/ad-1200.twig' %}
            </div>
        </div>
    </div>
</div>
